{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LicensingInventory",
  "type": "object",
  "required": ["generatedAt", "source", "dependencies"],
  "additionalProperties": false,
  "properties": {
    "generatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "source": {
      "oneOf": [
        {
          "type": "object",
          "required": ["type", "lockfile"],
          "additionalProperties": false,
          "properties": {
            "type": { "const": "npm" },
            "lockfile": { "type": "string", "minLength": 1 }
          }
        },
        {
          "type": "object",
          "required": ["type", "lockfile", "metadata"],
          "additionalProperties": false,
          "properties": {
            "type": { "const": "cargo" },
            "lockfile": { "type": "string", "minLength": 1 },
            "metadata": { "type": "string", "minLength": 1 }
          }
        },
        {
          "type": "object",
          "required": ["type", "inputs"],
          "additionalProperties": false,
          "properties": {
            "type": { "const": "aggregate" },
            "inputs": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "required": ["type", "path"],
                "additionalProperties": false,
                "properties": {
                  "type": { "type": "string", "enum": ["npm", "cargo"] },
                  "path": { "type": "string", "minLength": 1 }
                }
              },
              "uniqueItems": true
            }
          }
        }
      ]
    },
    "dependencies": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "version",
          "dependencyType",
          "licenses",
          "resolved",
          "checksum",
          "source",
          "provenance"
        ],
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "version": { "type": "string", "minLength": 1 },
          "dependencyType": {
            "type": "string",
            "enum": ["direct", "indirect"]
          },
          "licenses": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "pattern": "^(UNKNOWN|SEE LICENSE|NOASSERTION|[A-Za-z0-9.+-]+(?:\\s+WITH\\s+[A-Za-z0-9.+-]+)?)$"
            },
            "uniqueItems": true
          },
          "resolved": { "type": "string", "minLength": 1 },
          "checksum": { "type": "string", "minLength": 1 },
          "source": {
            "type": "object",
            "required": ["type", "location"],
            "additionalProperties": false,
            "properties": {
              "type": {
                "type": "string",
                "enum": ["npm", "git", "manual", "registry", "path", "aggregate"]
              },
              "location": { "type": "string", "minLength": 1 },
              "registry": { "type": "string" }
            }
          },
          "features": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 },
            "uniqueItems": true
          },
          "notes": { "type": "string" },
          "provenance": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["ecosystem", "dependencyType", "resolved", "checksum", "source"],
              "additionalProperties": false,
              "properties": {
                "ecosystem": { "type": "string", "enum": ["npm", "cargo"] },
                "dependencyType": {
                  "type": "string",
                  "enum": ["direct", "indirect"]
                },
                "resolved": { "type": "string", "minLength": 1 },
                "checksum": { "type": "string", "minLength": 1 },
                "source": {
                  "type": "object",
                  "required": ["type", "location"],
                  "additionalProperties": false,
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["npm", "git", "manual", "registry", "path", "aggregate"]
                    },
                    "location": { "type": "string", "minLength": 1 },
                    "registry": { "type": "string" }
                  }
                },
                "features": {
                  "type": "array",
                  "items": { "type": "string", "minLength": 1 },
                  "uniqueItems": true
                },
                "notes": { "type": "string" }
              }
            }
          }
        }
      },
      "uniqueItems": true
    }
  }
}
