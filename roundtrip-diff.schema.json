{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RoundtripDiff",
  "type": "object",
  "required": ["meta", "health", "tables", "attachments", "status"],
  "properties": {
    "meta": {
      "type": "object",
      "required": [
        "version",
        "generated_at",
        "before",
        "before_data_dir",
        "before_attachments_dir",
        "after",
        "after_db",
        "after_attachments_dir",
        "options"
      ],
      "properties": {
        "version": { "type": "integer", "minimum": 1 },
        "generated_at": { "type": "string", "format": "date-time" },
        "before": { "type": "string" },
        "before_data_dir": { "type": "string" },
        "before_attachments_dir": { "type": "string" },
        "after": { "type": "string" },
        "after_db": { "type": "string" },
        "after_attachments_dir": { "type": "string" },
        "options": {
          "type": "object",
          "required": ["tables", "sample", "strict", "fail_on", "include_deleted", "case_fold_paths"],
          "properties": {
            "tables": {
              "type": "array",
              "items": { "type": "string" }
            },
            "sample": { "type": "integer", "minimum": 0 },
            "strict": { "type": "boolean" },
            "fail_on": {
              "type": "array",
              "items": { "type": "string" }
            },
            "include_deleted": { "type": "boolean" },
            "case_fold_paths": { "type": "boolean" }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "health": {
      "type": "object",
      "required": ["ok", "checks"],
      "properties": {
        "ok": { "type": "boolean" },
        "checks": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "ok"],
            "properties": {
              "name": { "type": "string" },
              "ok": { "type": "boolean" },
              "details": { "type": "string" }
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": true
    },
    "tables": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["counts", "table_hash", "row_diffs"],
        "properties": {
          "counts": { "$ref": "#/definitions/countComparison" },
          "table_hash": { "$ref": "#/definitions/hashComparison" },
          "row_diffs": {
            "type": "object",
            "required": ["missing_ids", "extra_ids", "mismatched"],
            "properties": {
              "missing_ids": {
                "type": "array",
                "items": { "type": "string" }
              },
              "extra_ids": {
                "type": "array",
                "items": { "type": "string" }
              },
              "mismatched": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["id", "before_hash", "after_hash", "changed_keys"],
                  "properties": {
                    "id": { "type": "string" },
                    "before_hash": { "type": "string" },
                    "after_hash": { "type": "string" },
                    "changed_keys": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  },
                  "additionalProperties": true
                }
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },
    "attachments": {
      "type": "object",
      "required": ["counts", "bytes", "sha_mismatches", "sample_verified", "sample_mismatches"],
      "properties": {
        "counts": { "$ref": "#/definitions/countComparison" },
        "bytes": { "$ref": "#/definitions/countComparison" },
        "sha_mismatches": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["path", "before_sha", "after_sha"],
            "properties": {
              "path": { "type": "string" },
              "before_sha": { "type": ["string", "null"] },
              "after_sha": { "type": ["string", "null"] },
              "before_size": { "type": ["integer", "null"] },
              "after_size": { "type": ["integer", "null"] }
            },
            "additionalProperties": true
          }
        },
        "sample_verified": { "type": "integer", "minimum": 0 },
        "sample_mismatches": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["path", "reason"],
            "properties": {
              "path": { "type": "string" },
              "reason": { "type": "string" }
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "string",
      "enum": ["PASS", "FAIL_COUNTS", "FAIL_ROWS", "FAIL_ATTACHMENTS", "FAIL_HEALTH"]
    }
  },
  "additionalProperties": false,
  "definitions": {
    "countComparison": {
      "type": "object",
      "required": ["before", "after", "ok"],
      "properties": {
        "before": { "type": "integer", "minimum": 0 },
        "after": { "type": "integer", "minimum": 0 },
        "ok": { "type": "boolean" }
      },
      "additionalProperties": false
    },
    "hashComparison": {
      "type": "object",
      "required": ["before", "after", "ok"],
      "properties": {
        "before": { "type": "string" },
        "after": { "type": "string" },
        "ok": { "type": "boolean" }
      },
      "additionalProperties": false
    }
  }
}
